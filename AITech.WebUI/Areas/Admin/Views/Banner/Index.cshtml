@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h3>
    Featured Area
</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@item.Id</th>
            <td><img src="@item.ImageUrl" style="height: 75px; width:75px; border-radius:50%" />@item.Title</td>
            <td>@item.Description</td>
            <td>@(item.IsActive ? "Active" : "Passive")</td>
            <td>
                <a href="/Admin/Banner/DeleteBanner/@item.Id" class="btn btn-danger">Delete</a>
                <a href="/Admin/Banner/UpdateBanner/@item.Id" class="btn btn-info">Update</a>

                @if (item.IsActive)
                {
                    <a href="/Admin/Banner/MakePassive/@item.Id" class="btn btn-secondary">Make Passive</a>
                }
                else
                {
                    <a href="/Admin/Banner/MakeActive/@item.Id" class="btn btn-success">Make Active</a>
                }
            </td>
        </tr>
    }

</table>


<a href="/Admin/Banner/CreateBanner" class="btn btn-primary">Create New Banner</a>
