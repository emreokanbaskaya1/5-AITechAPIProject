@model List<AITech.WebUI.DTOs.FeatureDtos.ResultFeatureDto>

@{
    ViewData["Title"] = "Feature Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Features / Services</h3>
                <a asp-action="CreateFeature" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Icon</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feature in Model)
                                {
                                    <tr>
                                        <td>@feature.Id</td>
                                        <td><i class="@feature.Icon fa-2x text-primary"></i></td>
                                        <td>@feature.Title</td>
                                        <td>@(feature.Description.Length > 80 ? feature.Description.Substring(0, 80) + "..." : feature.Description)</td>
                                        <td>
                                            <a asp-action="UpdateFeature" asp-route-id="@feature.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteFeature" asp-route-id="@feature.Id" class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No features found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
