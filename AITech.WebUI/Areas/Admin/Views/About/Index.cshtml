@model List<AITech.WebUI.DTOs.AboutDtos.ResultAboutDto>

@{
    ViewData["Title"] = "About Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">About List</h3>
                <a asp-action="CreateAbout" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var about in Model)
                                {
                                    <tr>
                                        <td>@about.Id</td>
                                        <td>@about.Title</td>
                                        <td>@(about.Description.Length > 100 ? about.Description.Substring(0, 100) + "..." : about.Description)</td>
                                        <td>
                                            <img src="@about.ImageUrl" alt="@about.Title" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
                                        </td>
                                        <td>
                                            <a asp-action="UpdateAbout" asp-route-id="@about.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteAbout" asp-route-id="@about.Id" class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure you want to delete this item?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No about information found. Click "Create New" to add one.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
