@model List<AITech.WebUI.DTOs.TestimonialDtos.ResultTestimonialDto>

@{
    ViewData["Title"] = "Testimonial Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Testimonials</h3>
                <a asp-action="CreateTestimonial" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Title</th>
                                    <th>Comment</th>
                                    <th>Image</th>
                                    <th style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var testimonial in Model)
                                {
                                    <tr>
                                        <td>@testimonial.Id</td>
                                        <td>@testimonial.Name</td>
                                        <td>@testimonial.Title</td>
                                        <td>@(testimonial.Comment.Length > 50 ? testimonial.Comment.Substring(0, 50) + "..." : testimonial.Comment)</td>
                                        <td>
                                            <img src="@testimonial.ImageUrl" alt="@testimonial.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />
                                        </td>
                                        <td>
                                            <a asp-action="UpdateTestimonial" asp-route-id="@testimonial.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteTestimonial" asp-route-id="@testimonial.Id" class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No testimonials found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
