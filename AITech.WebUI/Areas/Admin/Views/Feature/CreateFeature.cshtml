@model AITech.WebUI.DTOs.FeatureDtos.CreateFeatureDto

@{
    ViewData["Title"] = "Create Feature";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Create New Feature/Service</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateFeature" method="post">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter feature title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label">Icon Class (FontAwesome)</label>
                        <input asp-for="Icon" class="form-control" placeholder="fa fa-robot" />
                        <span asp-validation-for="Icon" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Examples: fa fa-robot, fa fa-brain, fa fa-graduation-cap, fa fa-power-off
                            <br/>Browse: <a href="https://fontawesome.com/v5/search" target="_blank">FontAwesome Icons</a>
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
