@model List<AITech.WebUI.DTOs.SocialDtos.ResultSocialDto>

@{
    ViewData["Title"] = "Social Media Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Social Media Links</h3>
                <a asp-action="CreateSocial" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Icon</th>
                                    <th>Name</th>
                                    <th>URL</th>
                                    <th style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var social in Model)
                                {
                                    <tr>
                                        <td>@social.Id</td>
                                        <td><i class="@social.Icon fa-2x text-primary"></i></td>
                                        <td>@social.Name</td>
                                        <td><a href="@social.Url" target="_blank">@social.Url</a></td>
                                        <td>
                                            <a asp-action="UpdateSocial" asp-route-id="@social.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteSocial" asp-route-id="@social.Id" class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No social media links found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
