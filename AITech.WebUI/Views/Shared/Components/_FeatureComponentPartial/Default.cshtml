@model List<AITech.WebUI.DTOs.FeatureDtos.ResultFeatureDto>

<!-- Service Start -->
<div class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Our Services</div>
                <h1 class="mb-4">Our Excellent AI Solutions for Your Business</h1>
                <p class="mb-4">Discover our cutting-edge artificial intelligence services designed to transform your business operations and drive innovation.</p>
                <a class="btn btn-primary rounded-pill px-4" href="#">Read More</a>
            </div>
            <div class="col-lg-7">
                @if (Model != null && Model.Any())
                {
                    <div class="row g-4">
                        @for (int i = 0; i < Model.Count && i < 4; i++)
                        {
                            var feature = Model[i];
                            var delay = (i % 2 == 0) ? "0.1s" : "0.3s";
                            var colClass = (i % 2 == 0) ? "col-md-6" : "col-md-6 pt-md-4";
                            
                            <div class="@colClass">
                                <div class="col-12 wow fadeIn" data-wow-delay="@delay">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <i class="@feature.Icon fa-2x"></i>
                                        </div>
                                        <h5 class="mb-3">@feature.Title</h5>
                                        <p>@feature.Description</p>
                                        <a class="btn px-3 mt-auto mx-auto" href="#">Read More</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <p>No services available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
