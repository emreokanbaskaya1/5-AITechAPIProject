@model AITech.WebUI.DTOs.SocialDtos.CreateSocialDto

@{
    ViewData["Title"] = "Create Social Media";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Create Social Media Link</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateSocial" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Platform Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Facebook, Twitter, LinkedIn..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label">Icon Class (FontAwesome)</label>
                        <input asp-for="Icon" class="form-control" placeholder="fab fa-facebook-f" />
                        <span asp-validation-for="Icon" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Examples: fab fa-facebook-f, fab fa-twitter, fab fa-linkedin-in, fab fa-instagram
                            <br/>Browse: <a href="https://fontawesome.com/v5/search?m=free&s=brands" target="_blank">FontAwesome Brand Icons</a>
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Url" class="form-label">Profile URL</label>
                        <input asp-for="Url" class="form-control" placeholder="https://facebook.com/yourpage" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
