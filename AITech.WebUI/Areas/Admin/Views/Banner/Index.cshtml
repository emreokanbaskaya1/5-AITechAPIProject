@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Banners / Hero Sliders</h3>
                <a asp-action="CreateBanner" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Status</th>
                                    <th style="width: 250px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var banner in Model)
                                {
                                    <tr>
                                        <td>@banner.Id</td>
                                        <td>@banner.Title</td>
                                        <td>@(banner.Description.Length > 50 ? banner.Description.Substring(0, 50) + "..." : banner.Description)</td>
                                        <td>
                                            <img src="@banner.ImageUrl" alt="@banner.Title" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
                                        </td>
                                        <td>
                                            @if (banner.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Passive</span>
                                            }
                                        </td>
                                        <td>
                                            @if (banner.IsActive)
                                            {
                                                <a asp-action="MakePassive" asp-route-id="@banner.Id" class="btn btn-secondary btn-sm" title="Make Passive">
                                                    <i class="fas fa-eye-slash"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-action="MakeActive" asp-route-id="@banner.Id" class="btn btn-success btn-sm" title="Make Active">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            }
                                            <a asp-action="UpdateBanner" asp-route-id="@banner.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteBanner" asp-route-id="@banner.Id" class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure you want to delete this banner?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No banners found. Click "Create New" to add one.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
